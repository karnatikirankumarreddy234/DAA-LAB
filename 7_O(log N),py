def power_divide_log(x, n):
    if n == 0:
        return 1
    half = power_divide_log(x, n // 2)
    if n % 2 == 0:
        return half * half
    else:
        return x * half * half

if __name__ == "__main__":
    base = 2
    exponent = 10
    print(f"Base: {base}")
    print(f"Exponent: {exponent}")
    print("Result:", power_divide_log(base, exponent))
